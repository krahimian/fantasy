@import '00_variables.styl'
@import 'nib'

.body
    form
        max-width 550px
        margin 0 auto
    textarea
        background white
        resize none
        overflow hidden
    input
        width auto
        &[type="text"]
            margin 15px 0
            background white
        &[type="submit"]
            margin-left 20px
            background #E0E1E2
            border-radius 3px
            font-weight bold

.negative
    color #e57373
    font-weight bold
    margin-left 10px

.positive
    color #8bc34a
    font-weight bold
    margin-left 10px

table
    .player
        padding-left 20px
        padding-right 20px
    .bold
        font-weight bold
    .player-position
        font-size 10px
        padding-left 5px
        opacity .7