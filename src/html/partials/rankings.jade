.header
    h1 Week {{= it.current_week }} Power Rankings

{{~ it.tiers :tier:i }}
h4.tier Tier {{= i + 1 }}
{{~ tier :team:index }}
.team
    h2 \#{{= team.rank}}  {{= team.name }}
        {{? team.change >= 0 }}
        span.positive +{{= team.change}}
        {{??}}
        span.negative {{= team.change}}
        {{?}}
    .meta
        strong Record:
        span {{= team.record }}
    .meta
        strong Points Scored:
        span {{= team.total_points }}
    .meta
        strong Power Rank:
        span {{= (team.power_ranking).toFixed(2) }}
    .meta
        strong Projected Record:
        span {{= team.projected }}
    .meta
        strong Projected Points:
        span {{= team.total_points + team.projected_points }}
    .meta
        p {{= (team.note || '').replace(/\n/g, '<br/>') }}
{{~}}
{{~}}